---
import Layout from '../../layouts/Layout.astro';
import BlogList from '../../components/BlogList.astro';

// Get all blog posts
const posts = await Astro.glob('./*.{md,mdx}');
const nonDraftPosts = posts
  .filter(post => !post.frontmatter.draft)
  .sort((a, b) => new Date(b.frontmatter.pubDate) - new Date(a.frontmatter.pubDate));

// Get unique tags
const allTags = nonDraftPosts
  .flatMap(post => post.frontmatter.tags || [])
  .filter((tag, index, self) => self.indexOf(tag) === index)
  .sort();
---

<Layout title="Blog | MinBlog" description="Read all articles from MinBlog">
  <div class="container">
    <header class="page-header">
      <h1>Blog</h1>
      <p>Explore all our articles and insights.</p>
    </header>
    
    {allTags.length > 0 && (
      <div class="tags-filter">
        <span>Filter by tag:</span>
        <div class="tags">
          {allTags.map(tag => (
            <a href={`/tags/${tag}`} class="tag">{tag}</a>
          ))}
        </div>
      </div>
    )}
    
    <BlogList posts={nonDraftPosts} />
  </div>
</Layout>

<style>
  .page-header {
    padding: 4rem 0 2rem;
    text-align: center;
  }
  
  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .page-header p {
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }
  
  .tags-filter {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin: 2rem 0;
    flex-wrap: wrap;
  }
  
  .tags-filter span {
    color: var(--text-secondary);
  }
  
  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }
  
  .tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background-color: var(--accent-light);
    color: var(--accent);
    border-radius: 2rem;
    font-size: 0.85rem;
    text-decoration: none;
    transition: background-color 0.2s ease, color 0.2s ease;
  }
  
  .tag:hover {
    background-color: var(--accent);
    color: white;
  }
  
  @media (max-width: 768px) {
    .page-header {
      padding: 3rem 0 1.5rem;
    }
    
    .tags-filter {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>