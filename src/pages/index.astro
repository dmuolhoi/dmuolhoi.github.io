---
import Layout from '../layouts/Layout.astro';
import BlogList from '../components/BlogList.astro';

// Get all blog posts
const posts = await Astro.glob('./blog/*.{md,mdx}');
const nonDraftPosts = posts
  .filter(post => !post.frontmatter.draft)
  .sort((a, b) => new Date(b.frontmatter.pubDate) - new Date(a.frontmatter.pubDate))
  .slice(0, 3);
---

<Layout title="Minimalist Blog">
  <section class="hero fade-in">
    <div class="container">
      <h1>Welcome to MinBlog</h1>
      <p class="subtitle">A clean, minimalist blog focused on content.</p>
    </div>
  </section>
  
  <section class="latest-posts container">
    <div class="section-header">
      <h2>Latest Articles</h2>
      <a href="/blog" class="view-all">View all posts â†’</a>
    </div>
    
    <BlogList posts={nonDraftPosts} />
  </section>
</Layout>

<style>
  .hero {
    padding: 6rem 0 3rem;
    text-align: center;
  }
  
  h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    line-height: 1.1;
  }
  
  .subtitle {
    font-size: 1.5rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto 3rem;
  }
  
  .latest-posts {
    padding: 2rem 0 4rem;
  }
  
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 1.5rem;
  }
  
  .view-all {
    font-size: 1rem;
    color: var(--accent);
  }
  
  @media (max-width: 768px) {
    .hero {
      padding: 4rem 0 2rem;
    }
    
    h1 {
      font-size: 2.5rem;
    }
    
    .subtitle {
      font-size: 1.25rem;
    }
    
    .section-header {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>